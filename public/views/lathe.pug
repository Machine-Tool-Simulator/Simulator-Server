html
    head
        style
            include ../css/styles.css
        title=pagetitle

body
    div(class='split left')
        div
            div(id='title') #{title}
            if coversrc != null
                img(id="cover", src=coversrc)
            if videourl != null
                iframe(id='player', style='display:none', frameborder='0', src=videourl)
            p(id='description') #{description}

    div(class='split right', style='padding-top: 0px;')
        div(id='Timer') Time Left 
            span(id='timer')
        section(class='control-panel')
            div(class='leftControlBtn')
                button(class='rbtn1', id='sys')
                    strong SYS
                button(class='rbtn1', id='upbtn')
                    img(src='public/imgs/UU.png')
                button(class='rbtn1', id='downbtn')
                    img(src='public/imgs/DD.png')
                button(class='rbtn1', id='help')
                    strong HELP
                button(class='rbtn1', id='back')
                    strong BACK
            
            div(class='readout-full')
                div(class='logo')
                    img(src='public/imgs/redbtn.png', id='redbtn')
                    img(src='public/imgs/logo.png', id='readout-logo')

                div(class='readout')
                    div(class='XZ-coord')
                        div(class='x-coord')
                            p
                                label X:
                                input(id='xvar', type='text', value='', name='xvar' disabled)
                                br
                        div(class='z-coord')
                            p
                                label Z:
                                input(id='zvar', type='text', value='', name='zvar' disabled)
                                br

                    div(class='text-field')
                        div(class='text_row1')
                            p(id='p1')
                                label(id='tx1') SPINDLE RPM 
                                input(id='rpm', type='text', value='', name='rpm', disabled)
                                br
                            p(id='p1')
                                label(id='tx1') Override 
                                input(id='overrite', type='text', value='', name='overrite', disabled)
                                br
                        div(class='text_row1')
                            p(id='p2')
                                label(id='tx1') Feed Rate 
                                input(id='frate', type='text', value='', name='frate', disabled)
                                br
                            p(id='p1')
                                label(id='tx1') Override
                                input(id='overrite', type='text', value='', name='overrite', disabled)
                                br
                    
                    input(type='text', value='', id='buffer', readonly)

                    div(class='function')
                        div(class='fnumber')
                            label(id='h1') F1
                            textarea(id='f1', disabled) (TAPER)
                        div(class='fnumber')
                            label(id='h1') F2
                            textarea(id='f2', disabled) POWER FEED
                        div(class='fnumber')
                            label(id='h1') F3
                            textarea(id='f3', disabled) DO ONE
                        div(class='fnumber')
                            label(id='h1') F4
                            textarea(id='f4', disabled) GO TO
                        div(class='fnumber')
                            label(id='h1') F5
                            textarea(id='f5', disabled) MAX RPM
                        div(class='fnumber')
                            label(id='h1') F6
                            textarea(id='f6', disabled) RETURN HOME
                        div(class='fnumber')
                            label(id='h1') F7
                            textarea(id='f7', disabled) SPIN SPEED
                        div(class='fnumber')
                            label(id='h1') F8
                            textarea(id='f8', disabled) TOOL # (RETURN)

                div(class='readou-button')
                    input(type='button', class='rbtn', value=' ', id='f1btn', onclick='controlPressed(\'TAPER\')', style='background-image: url(public/imgs/rbtn.png); background-size:100% 100%;height: 100%;width: 10%;')
                    input(type='button', class='rbtn', value=' ', id='f2btn', onclick='controlPressed(\'POWERFEED\')', style='background-image: url(public/imgs/rbtn.png); background-size:100% 100%;height: 100%;width: 10%;')
                    input(type='button', class='rbtn', value=' ', id='f3btn', onclick='controlPressed(\'DOONE\')', style='background-image: url(public/imgs/rbtn.png); background-size:100% 100%;height: 100%;width: 10%;')
                    input(type='button', class='rbtn', value=' ', id='f4btn', onclick='controlPressed(\'GOTO\')', style='background-image: url(public/imgs/rbtn.png); background-size:100% 100%;height: 100%;width: 10%;')
                    input(type='button', class='rbtn', value=' ', id='f5btn', onclick='controlPressed(\'MAX_RPM\')', style='background-image: url(public/imgs/rbtn.png); background-size:100% 100%;height: 100%;width: 10%;')
                    input(type='button', class='rbtn', value=' ', id='f6btn', onclick='controlPressed(\'RETURNHOME\')', style='background-image: url(public/imgs/rbtn.png); background-size:100% 100%;height: 100%;width: 10%;')
                    input(type='button', class='rbtn', value=' ', id='f7btn', onclick='controlPressed(\'RPM\')', style='background-image: url(public/imgs/rbtn.png); background-size:100% 100%;height: 100%;width: 10%;')
                    input(type='button', class='rbtn', value=' ', id='f8btn', onclick='controlPressed(\'TOOLRET\')', style='background-image: url(public/imgs/rbtn.png); background-size:100% 100%;height: 100%;width: 10%;')
                
            div(class='xz-input')
                div(class='accessory', id='firtbtn')
                    label(id='button-header')
                        strong ACCESSORY
                    button(class='accbutton', id='acc')
                button(class='XZbutton', id='Xbutton') X

                div(class='accessory')
                    label(id='button-header1')
                        strong inc/abs
                    button(class='accbutton', id='inc-abs')
                
                div(class='accessory')
                    label(id='button-header1')
                        strong in/mm
                    button(class='accbutton', id='in-mm')
                button(class='XZbutton', id='Zbutton') Z

                div(class='accessory', id='lookdiv')
                    label(id='button-header1')
                        strong LOOK
                    button(class='accbutton', id='look')
                
                button(class='XZbutton', id='mode') MODE
            
            div(class='leftKeybord', id='row1')
                div(class='row3', id='firstrow')
                    label(id='SPINDLE')
                        strong FEED
                    div(class='btn')
                        input(type='button', class='sbutton', value='GO', id='GO', onclick='controlPressed(\'GO\');')
                        input(type='button', class='sbutton', value='STOP', id='STOP', onclick='setAbsPos();')
                
                div(class='row3')
                    label(id='SPINDLE')
                        strong OVERRIDE
                    div(class='btn')
                        input(type='button', class='sbutton', value='F/S', id='FS', onclick='sdtAbsPos()')
                        button(class='sbutton', id='UP')
                            img(src='public/imgs/UA.png')
                        button(class='sbutton', id='DOWN')
                            img(src='public/imgs/DA.png')
                
                div(class='row3')
                    label(id='SPINDLE')
                        strong SPINDLE
                        div(class='btn')
                            input(type='button', class='sbutton', value='REV', id='rev', onclick='spindle(this)')
                            input(type='button', class='sbutton', value='OFF', id='off', onclick='spindle(this)')
                            input(type='button', class='sbutton', value='FWD', id='FWD', onclick='spindle(this)')

                div(class='row4')
                    input(type='button', class='sbutton', value='F/C', onclick='controlPressed(\'FS\')', id='FC')
                    input(type='button', class='sbutton', value='INC SET', id='IncSet', onclick='setIncPos()')
                    input(type='button', class='sbutton', value='ABS SET', id='IncSet', onclick='setAbsPos()')

                div(class='keyboard')
                    div(class='row')
                        input(type='button', class='fbutton', value='7', onclick='numberPressed(this)')
                        input(type='button', class='fbutton', value='8', onclick='numberPressed(this)')
                        input(type='button', class='fbutton', value='9', onclick='numberPressed(this)')
                    
                    div(class='row')
                        input(type='button', class='fbutton', value='4', onclick='numberPressed(this)')
                        input(type='button', class='fbutton', value='5', onclick='numberPressed(this)')
                        input(type='button', class='fbutton', value='6', onclick='numberPressed(this)')
                    
                    div(class='row')
                        input(type='button', class='fbutton', value='1', onclick='numberPressed(this)')
                        input(type='button', class='fbutton', value='2', onclick='numberPressed(this)')
                        input(type='button', class='fbutton', value='3', onclick='numberPressed(this)')

                    div(class='row')
                        input(type='button', class='fbutton', value='+/-', onclick='negBuffer()')
                        input(type='button', class='fbutton', value='0', onclick='numberPressed(this)')
                        input(type='button', class='fbutton', value='.', onclick='numberPressed(this)')
                    
                    div(class='row')
                        input(type='button', class='fbutton', id='abtn', value='*')
                        input(type='button', class='fbutton', id='restorebtn', value='RESTORE', onclick='restore()')
                    
                div(class='buttomlogo')
                    img(src='public/imgs/bottomLogo.png', id='blogo')
    
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js')
    script(type='text/javascript', src='public/js/index.js')


                    